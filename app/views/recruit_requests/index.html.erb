<p id="notice"><%= notice %></p>

<h1>Recruit Requests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>団体名</th>
      <th>メール</th>
      <th>URL</th>
      <th>練習時間</th>
      <th>募集楽器</th>
      <th>自由欄</th>
    </tr>
    <% @recruit_requests.each do |recruit_request| %>
      <tr>
        <td><%= recruit_request.team.name %></td>
        <td><%= recruit_request.team.mail %></td>
        <td><%= recruit_request.team.url %></td>
        <td><%= recruit_request.practice_time %></td>
        <td><%= recruit_request.instruments.pluck(:name) %></td>
        <td><%= recruit_request.free_text %></td>
        <td><%= recruit_request.post_period_from %></td>
        <td><%= recruit_request.post_period_to %></td>
        <td><%= link_to 'Show', recruit_request %></td>
        <td><%= link_to 'Edit', edit_recruit_request_path(recruit_request) %></td>
        <td><%= link_to 'Destroy', recruit_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recruit Request', new_recruit_request_path %>
