<p id="notice"><%= notice %></p>

<h1>Recruits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <tr>
      <th>団体名</th>
      <th>メール</th>
      <th>URL</th>
      <th>練習時間</th>
      <th>募集楽器</th>
      <th>自由欄</th>
    </tr>
    <% @recruits.each do |recruit| %>
      <tr>
        <td><%= recruit.team.name %></td>
        <td><%= recruit.team.mail %></td>
        <td><%= recruit.team.url %></td>
        <td><%= recruit.practice_time %></td>
        <td><%= recruit.instruments.pluck(:name) %></td>
        <td><%= recruit.free_text %></td>
        <td><%= recruit.post_period_from %></td>
        <td><%= recruit.post_period_to %></td>
        <td><%= link_to 'Show', recruit %></td>
        <td><%= link_to 'Destroy', recruit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= form_tag edit_recruit_path(recruit) do %>
          <div class="field">
            <%= label_tag 'password'%>
            <%= password_field_tag 'password' %>
          </div>
          <%= submit_tag  'Edit' %>
        <% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recruit', new_recruit_path %>
